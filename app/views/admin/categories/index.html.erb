<br/>
<div class="row">
  <div class="col-sm-1 btn btn-default">
  <%= link_to "Create", new_admin_category_path %>
  </div>
</div> 
<br/> 
<div class="row">
  
<% @type.each do |t| %>
  <h4>  <span  class="border-bot"> <%= t.name %> </span> </h4>
  <% if t.categories.count > 0 %>
  <div class="col-sm-offset-1">
    <div class="row">
        <div class="col-md-8">
            <table class="table table-striped table-condensed">
            <thead>
              <th class="col-md-1"> Stt  </th>
              <th class="col-md-1"> ID </th>
              <th class="col-md-6"> Ten </th>         
              <th class="col-md-2"> Sua </th>
              <th class="col-md-2"> Xoa </th>     
            </thead>
            <tbody>
              <% i = 1%>
              <% t.categories.each do |c|%>
                <tr>
                <td class="col-md-1"> <%= i %> </td>
                <td class="col-md-1"> <%= c.id %></td>
                <td class="col-md-6"> <%= c.name %></td>
                <td class="col-md-2"> <%= link_to "Edit", edit_admin_category_path(c) %> </td>
                <td class="col-md-2"> <%= link_to "Delete", admin_category_path(c), data: { confirm: 'Are you sure?' }, :method => :delete%> </td>
                </tr>
                <% i= i+1 %>
              <% end %>
            </tbody>
            </table>
      </div>
    </div>
  </div>
  <% else %>
  <div class="row">
    <div class="text-center col-sm-4 ">
    <p> Chua co loai </p>
    </div>
  </div>  
  <% end %>  
<% end %>

</div>

