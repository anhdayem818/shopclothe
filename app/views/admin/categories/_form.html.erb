<%= form_for ([:admin,@category]), html: {class: "form-horizontal"}  do |f| %>
  <%unless @category.errors.messages.blank? %>
    <div class=" bg-danger form-group ">
      <h4 class="text-center col-sm-8 col-sm-offset-2"> ban chua chon loai cho danh muc nay </h4>
    </div>
    <% end%>
  <div class="form-group">
    <%= f.label :name, :class=> "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :name, :class=> "form-control"%>
    </div>
  </div>

  <div class="form-group">
      <label class="col-sm-2 control-label"> Nhom :</label>  
      <div class="col-sm-10">
        <%= f.select :type_id, Type.all.collect {|x| [x.name,x.id] }, {:include_blank => "Select One" } , :class=> "form-control" %>
      </div>  
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "OK" , :class => "btn btn-default"%>
    </div>
  </div>
<% end %>
