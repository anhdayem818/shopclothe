<br/>
<div class="row">
  <div class="col-sm-1 btn btn-default">
  <%= link_to "Create", new_admin_product_path %>
  </div>
</div> 
<br/> 
<div class="row">
  
<% @type.each do |t| %>
  <h4>  <span  class="border-bot"> <strong><%= t.name %> </strong>  </span> </h4>
  <% if t.categories.count > 0 %>
    <% t.categories.each do |c| %>
    <br/>
    <h5 class="col-sm-offset-1"> <span  class="border-bot"> <%= c.name %> </span> </h5>    
      <% if c.products.count > 0 %>       
          <div class="col-sm-offset-1">
            <div class="row">
                <div class="col-md-9">
                  <table class="table table-striped table-condensed">
                  <thead>
                    <th class="col-md-1"> Stt  </th>
                    <th class="col-md-1"> ID </th>
                    <th class="col-md-4"> Ten </th>
                    <th class="col-md-3"> Image </th>   
                    <th class="col-md-1"> Price</th>   
                    <th class="col-md-1"> Sua </th>
                    <th class="col-md-1"> Xoa </th>     
                  </thead>
                  <tbody>
                    <% i = 1%>
                  <% c.products.each do |p|%>
                      <tr>
                      <td class="col-md-1"> <%= i %> </td>
                      <td class="col-md-1"> <%= p.id %></td>
                      <td class="col-md-4"> <%= link_to p.name, product_path(p)%></td>
                      <td class="col-md-3"> <%= image_tag p.image.url, size: "90x130" %> </td>
                      <td class="col-md-1"> <%= p.price %></td>
                      <td class="col-md-1"> <%= link_to "Edit", edit_admin_product_path(p) %> </td>
                      <td class="col-md-1"> <%= link_to "Delete", admin_product_path(p), data: { confirm: 'Are you sure?' }, :method => :delete%> </td>
                      </tr>
                      <% i= i+1 %>
                    <% end %>
                  </tbody>
                  </table>
            </div>
          </div>
        </div>
      <% else %>
        <div class="row">
          <div class="text-center col-sm-4 ">
          <p> Chua co loai </p>
          </div>
        </div>  
      <% end %>  
    <% end %>
  <% else %>
  <div class="row">
    <div class="text-center col-sm-4 ">
    <p> Chua co loai </p>
    </div>
  </div>  
  <% end %>  
<% end %>

</div>
