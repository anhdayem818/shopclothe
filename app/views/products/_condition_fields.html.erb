<div class="form-group">
  <div class="col-sm-3">
  <%= f.attribute_fields do |a| %>
    <%= a.attribute_select({associations: [:category]}, {class: 'form-control'}) %>
  <% end %>
  </div>

  <div class="col-sm-3">
  <%= f.predicate_select({only: [:cont, :not_cont, :lt, :gt]}, {class: 'form-control'}) %>
  </div>
  <div class="col-sm-3">
  <%= f.value_fields do |v| %>

    <%= v.text_field :value, :class=> "form-control" %>
  <% end %>
  </div>
  <div class="col-sm-3">
  <%= link_to "remove", '#', class: "remove_fields", style: "line-height:32px;" %>
  </div>
</div>