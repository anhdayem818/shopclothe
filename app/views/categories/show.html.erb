<div class="content">
<div class="row">
    <h3 class="text-primary"> <%= Category.find(params[:id]).name %> </h3>
</div>
<div class="row product-container">  

<% @products.each do |x|%>
  <div class="col-md-4 col-xs-8" >
      <div class="thumbnail product-item">
        <a href="<%= url_for :controller => 'products', :action => 'show', :id => x.id %>"><img alt="" src="<%= x.image.url %>"></a>
        <div class="caption">
            <h5><%= x.name%></h5>
            <p>$ <%= x.price%></p>                    
        </div>
        <% if p.created_at + 3.days > Time.zone.now.utc %>
          <div class="product-item-badge">New</div>
        <% end %>
      </div>
  </div>     
<% end %>
 </div>
<br/>
<div class="row">
<%= paginate @products %>
</div>    
</div>    