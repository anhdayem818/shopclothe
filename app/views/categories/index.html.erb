<div class="content">
<div class="row">
    <h3 class="text-primary"> Cac mat hang moi</h3>
</div>
<% @categories.each do |x|%>
    <% tam = x.products %>
     <% if tam.count > 0 %>
        <div class="row">
          <div class="col-sm-4 "> <h3 class="border-bot">  <%= x.name %></h3> </div>
        </div>
        <div class="row product-container"> 
      <% tam.each do |p| %>  
          <div class="col-md-4 col-xs-8" >
              <div class="thumbnail product-item">
                <a href="<%= url_for :controller => 'products', :action => 'show', :id => p.id %>"><img alt="" src="<%= p.image.url %>"></a>
                <div class="caption">
                    <h5><%= p.name%></h5>
                    <p>$ <%= p.price%></p>                    
                </div> 
                <% if p.created_at + 3.days > Time.zone.now.utc %>
                  <div class="product-item-badge">New</div>
                <% end %>
              </div>
          </div>
        <% end %>      
        </div>
    <% end %>
<% end %>
<br/>
</div>    
    